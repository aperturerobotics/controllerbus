{
  "name": "@aperturerobotics/controllerbus",
  "description": "Communicating concurrent controllers program framework.",
  "version": "0.52.3",
  "license": "Apache-2.0",
  "author": {
    "name": "Aperture Robotics LLC.",
    "email": "support@aperture.us",
    "url": "http://aperture.us"
  },
  "contributors": [
    {
      "name": "Christian Stewart",
      "email": "christian@aperture.us",
      "url": "http://github.com/paralin"
    }
  ],
  "repository": {
    "url": "git+ssh://git@github.com/aperturerobotics/controllerbus.git"
  },
  "type": "module",
  "scripts": {
    "check": "npm run typecheck && npm run lint",
    "typecheck": "tsc --project tsconfig.json --noEmit true",
    "deps": "depcheck --ignore-patterns=.eslintrc.cjs,package.json --ignores depcheck,@aptre/common,prettier,rimraf,typescript",
    "clean": "rimraf ./dist/",
    "build": "tsc --project tsconfig.json --noEmit false --outDir ./dist/",
    "codegen": "npm run gen",
    "gen": "npm run go:aptre -- generate",
    "gen:force": "npm run go:aptre -- generate --force",
    "format": "npm run format:js && npm run format:go",
    "format:go": "npm run go:aptre -- format",
    "format:js": "prettier --write './!(vendor|dist)/**/(*.ts|*.tsx|*.js|*.html|*.css)'",
    "format:js:all": "prettier --write './!(vendor|dist)/**/(*.ts|*.tsx|*.js|*.html|*.css)'",
    "test": "npm run test:js && npm run test:go",
    "test:js": "npm run typecheck",
    "test:go": "npm run go:aptre -- test",
    "lint": "npm run lint:go && npm run lint:js",
    "lint:go": "npm run go:aptre -- lint",
    "lint:js": "eslint ./",
    "ci": "npm run build && npm run lint:js && npm run lint:go",
    "prepare": "npm run clean && rimraf ./.tools && npm run vendor",
    "vendor": "go mod vendor",
    "go:aptre": "go run -mod=mod github.com/aperturerobotics/common/cmd/aptre",
    "release": "npm run release:version && npm run release:commit",
    "release:minor": "npm run release:version:minor && npm run release:commit",
    "release:version": "npm version patch -m \"release: v%s\" --no-git-tag-version",
    "release:version:minor": "npm version minor -m \"release: v%s\" --no-git-tag-version",
    "release:commit": "git reset && git add package.json && git commit -s -m \"release: v$(node -p \"require('./package.json').version\")\" && git tag v$(node -p \"require('./package.json').version\")",
    "release:publish": "git push && git push --tags",
    "precommit": "npm run format"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@aptre/common": "^0.30.0",
    "depcheck": "^1.4.7",
    "happy-dom": "^20.4.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@aptre/protobuf-es-lite": "^1.0.0",
    "starpc": "^0.46.0"
  },
  "resolutions": {
    "@aptre/protobuf-es-lite": "^1.0.0"
  }
}
